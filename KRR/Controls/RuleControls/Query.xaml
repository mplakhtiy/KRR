<UserControl x:Class="KRR.Controls.RuleControls.Query"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KRR.Controls.RuleControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="220"
             BorderBrush="Black" 
             BorderThickness="3">
    <Grid >
        <Label Name="Agent" Content="Agent" FontFamily="Impact" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <ComboBox Name="AgentComboBox" Height="20" Width="80"  Foreground="Black"  Margin="80,5,0,0" FontSize="12"  HorizontalAlignment="Left" VerticalAlignment="Top"  >
        </ComboBox>

        <Label Name="Action" Content="Action" FontFamily="Impact"  Margin="0,40,0,0" FontSize="15"  Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <ComboBox Name="ActionComboBox" Height="20" Width="80"  Foreground="Black"  Margin="80,45,0,0" FontSize="12"  HorizontalAlignment="Left" VerticalAlignment="Top">
        </ComboBox>
        
    </Grid>
</UserControl>
