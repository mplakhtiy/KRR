<UserControl x:Class="KRR.Controls.RuleControls.Always"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KRR.Controls.RuleControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300"
             BorderBrush="Black" 
             BorderThickness="3">
    <Grid>
        <Label Name="always" Content="always" FontFamily="Impact" Foreground="Black" Margin="0,0,0,60" FontSize="15"   HorizontalAlignment="Center" VerticalAlignment="Center"></Label>

        <Label Name="Fluent" Content="Fluent" FontFamily="Impact" Foreground="Black" Margin="40,0,0,0" FontSize="15"  HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
        <ComboBox Name="FluentComboBox" Height="20" Width="80"  Foreground="Black"  Margin="120,0,0,0" FontSize="15"  HorizontalAlignment="Left" VerticalAlignment="Center" >
        </ComboBox>

    </Grid>
</UserControl>
